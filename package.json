{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:skip-checks": "next build --no-lint",
    "build:production": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "lint:ci": "next lint --config .eslintrc.ci.json",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc --noEmit --project tsconfig.ci.json",
    "vercel-deploy": "vercel --prod",
    "vercel-setup": "node scripts/get-vercel-config.js",
    "db:schema": "node scripts/apply-schema.js",
