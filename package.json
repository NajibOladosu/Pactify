    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:components": "jest --testPathPattern=__tests__/components",
    "test:utils": "jest --testPathPattern=__tests__/utils",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:simple": "node __tests__/run-simple-tests.js",
    "test:comprehensive": "node __tests__/run-all-tests.js",
    "test:setup": "node __tests__/setup-real-testing.js",
    "test:auth": "jest --testPathPattern=__tests__/integration/auth-profile.test.js",
    "test:contracts": "jest --testPathPattern=__tests__/integration/contract-lifecycle.test.js",
    "test:payments": "jest --testPathPattern=__tests__/integration/payment-escrow.test.js",
    "test:subscriptions": "jest --testPathPattern=__tests__/integration/subscription-management.test.js",
    "test:disputes": "jest --testPathPattern=__tests__/integration/dispute-resolution.test.js",
    "test:deliverables": "jest --testPathPattern=__tests__/integration/deliverables-completion.test.js",
    "test:api-contracts": "jest --testPathPattern=__tests__/api/contracts.test.js",
    "test:api-payments": "jest --testPathPattern=__tests__/api/payments.test.js",
    "test:api-subscriptions": "jest --testPathPattern=__tests__/api/subscriptions.test.js",
    "test:workflow": "jest --testPathPattern=__tests__/e2e/complete-workflow.test.js",
    "test:real-data": "ENABLE_REAL_DATA_TESTING=true npm run test:comprehensive",
    "test:enable-comprehensive": "node __tests__/enable-comprehensive-testing.js",
    "test:disable-comprehensive": "node __tests__/enable-comprehensive-testing.js --disable"
